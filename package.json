{
  "name": "spanwright",
  "version": "0.0.10",
  "description": "CLI tool to generate Cloud Spanner E2E testing framework projects with Go database tools and Playwright browser automation",
  "main": "dist/index.js",
  "bin": {
    "spanwright": "dist/index.js"
  },
  "files": [
    "dist",
    "template",
    "README.md",
    "LICENSE",
    "CLAUDE.md",
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "SECURITY.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "npm run e2e",
    "lint": "eslint src scripts --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.ts\"",
    "prepare": "npm run build",
    "validate": "npx ts-node scripts/validate.ts",
    "e2e": "npx ts-node scripts/run-e2e-test.ts",
    "examples": "npx ts-node scripts/create-examples.ts",
    "update-go": "npx ts-node scripts/update-go-version.ts",
    "release": "./scripts/release.sh",
    "preversion": "npm run validate && npm run build",
    "template:validate": "npx ts-node scripts/validate.ts",
    "template:validate-go": "npx ts-node scripts/validate.ts --go-only",
    "template:validate-ts": "npx ts-node scripts/validate.ts --ts-only",
    "template:validate-config": "npx ts-node scripts/validate.ts --config-only",
    "ci:setup-schemas": "npx ts-node scripts/setup-ci-schemas.ts",
    "ci:e2e": "npx ts-node scripts/run-e2e-test.ts",
    "ci:quick-test": "npm run template:validate && npm run ci:e2e",
    "update-go-version": "npx ts-node scripts/update-go-version.ts"
  },
  "keywords": [
    "spanner",
    "e2e",
    "testing",
    "database",
    "playwright",
    "cloud-spanner",
    "emulator"
  ],
  "author": "nu0ma",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nu0ma/spanwright.git"
  },
  "homepage": "https://github.com/nu0ma/spanwright#readme",
  "bugs": {
    "url": "https://github.com/nu0ma/spanwright/issues"
  },
  "preferGlobal": true,
  "dependencies": {
    "@types/node": "^24.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/js-yaml": "^4.0.9",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
